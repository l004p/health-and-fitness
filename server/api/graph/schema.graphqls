# https://gqlgen.com/getting-started/

directive @hasRole(role: Role!) on FIELD_DEFINITION

enum Role {
  MEMBER
  TRAINER
  ADMIN
}

type User {
  user_id: ID!
  username: String!
  user_email: String!
  first_name: String!
  last_name: String!
}

type Bill {
  
}

type Query {
  users: [User!]! @hasRole(role: TRAINER)
  usersTrained: [User!]! @hasRole(role: TRAINER)
  trainers: [User!]! @hasRole(role: MEMBER)
}


type Mutation {

}
